/* pages/my/my.wxss */

.container{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.userData{
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  height: 266rpx;
  border-bottom: 10px solid #f2f1ed;
}

.userDataBackground{
  width: 100%;
  height: 100%;
}

.userData_signed{
  display: flex;
  flex-direction: row;
  position: absolute;
  width: 100%;
  bottom: 0;
  margin-bottom: 20rpx;
  align-items: center;
}

.userData_signed_avatarUrl{
  width:120rpx; 
  height:120rpx; 
  margin-right: 15rpx;
  margin-left: 10rpx;
  border: 2px solid #ffffff;
  border-radius:50%;
}

.userData_signed_detail{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

.focus{
  display: flex;
  flex-direction: row;
}

.focus_focus{
  font-size: 12px;
}

.focus_focused{
  font-size: 12px;
  margin-left: 18rpx;
}

.userData_signed_right{
  display: flex;
  flex-direction: row;
  position: absolute;
  right: 0;
  margin-right: 10rpx;
  align-items: center;
}

.userData_signed_rightText{
  font-size: 24rpx;
}

.userData_signed_rightIcon{
  margin-left: 10rpx;
  margin-top: 5rpx;
}

.notSigned{
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  bottom: 20rpx;
}

.notSignInText{
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.signInButton{
  margin-top: 10rpx;
}

