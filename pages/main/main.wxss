
.scroll_navigate{
  width: 100%;
  position: fixed;
  background-color: #ffffff;
}

.navigate_container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.navigate_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
}

.names {
  font-size: 28rpx;
  color: #3c3c3c;
}

.names.active {
  color: #d4442c;
  font-weight: bold;
  font-size: 34rpx;
}

.currtline {
  margin-top: 10rpx;
  width: 80rpx;
  height: 8rpx;
  border-radius: 4rpx;
}

.currtline.active {
  background: #d4442c;
  transition: all .3s;
}

.swiper{
  width: 100%;
  position: fixed;
}

.swiper_item{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.swiper_item_text{
  text-align: center;
  margin-top: 30rpx;
}

.swiper_item_news{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.post{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  border-radius: 50%;
  bottom: 30rpx;
  right: 30rpx;
  box-shadow: 1px 1px 5px 2px #999999;
}


.options{
  display: flex;
  flex-direction: column;
  width: 520rpx;
  background-color: white;
  border-radius: 2px;
}

.options1{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f5f5f5;
}

.options2{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}