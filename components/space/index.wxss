/* components/info/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.top{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  left: 10rpx;
  z-index: 777;
}

.poster{
  width: 100%;
}

.content{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.head{
  position: relative;
  width:120rpx; 
  height:120rpx;
  margin-top: -60rpx;
  margin-left: 30rpx;
}

.head_image{
  width:120rpx; 
  height:120rpx;
  border: 2px solid #ffffff;
  border-radius:50%;
}

.head_gender{
  position: absolute;
  right: -8rpx;
  bottom: -8rpx;
  width: 30rpx; 
  height: 30rpx;
  border: 2px solid #ffffff;
  border-radius:50%;
  background-color: #e6f4ff;
}

.editInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
}

.info{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20rpx;
  margin-top: 60rpx;
  border-bottom: 1px solid #f5f5f5;
}

.info_nickName{
  font-size: 30px;
  color: black;
}

.fo{
  display: flex;
  flex-direction: row;
}

.fo1{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.fo2{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.fo1_1{
  font-size: 25px;
}

.fo1_2{
  margin-left: 5rpx;
}

.fo2_1{
  font-size: 25px;
}

.fo2_2{
  margin-left: 5rpx;
}

.photosWall{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20rpx;
}

.photosWall_text{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.photosWall_icon{
  margin-right: 50rpx;
}

.photosWall_photos{
  margin-top: 20rpx;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 20rpx;
}



.pop_header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
  border-bottom: 1px solid #f5f5f5;
}



.pop_content{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.pop_portrait{
  position: relative;
  width:240rpx; 
  height:240rpx; 
  border-radius:50%;
  -webkit-border-radius:50%;
  -moz-border-radius:50%;
}

.pop_modPortrait{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 25%;
  background-color: #9999;
  opacity: 0.5;
  font-size: 20rpx;
  text-align: center;
  text-justify: center;
}

.pop_content_nickName{
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
}

.pop_content_sex{
  width: 100%;
  margin-top: 10rpx;
}

.pop_content_sex_text{
  margin-left: 20rpx;
}

.pop_content_sex_men{
  margin-left: 40rpx;
}

.pop_content_sex_women{
  margin-left: 20rpx;
}

.pop_content_intro{
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f5f5f5;
  margin-top: 10rpx;
}

.pop_content_intro_text{
  width: 100rpx;
  margin-left: 20rpx;
}

.pop_content_intro_textarea{
  width: 100%;
  height: 250rpx;
}

.pop_content_city{
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  margin-top: 10rpx;
}

.pop_content_city_text{
  margin-left: 20rpx;
}

.pop_content_city_loc{
  margin-left: 20rpx;
}

.pop_content_birth{
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  margin-top: 10rpx;
}

.pop_content_birth_text{
  margin-left: 20rpx;
}

.pop_content_birth_day{
  margin-left: 20rpx;
}