/* components/comment/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100vw;
  padding: 10px;
}

.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80rpx;
}

.header_avatarUrl{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}

.header_nickName{
  margin-left: 10rpx;
}

.header_time{
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #d0d0d0;
}

.header_icon{
  position: absolute;
  right: 20rpx;
}

.content{
  height: auto;
}

.footer{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.footer_icon{
  margin-left: 20rpx;
}

.footer_value{
  margin-left: 5rpx;
  margin-bottom: 5rpx;
}

.pop{
  z-index: 888;
}

.options{
  display: flex;
  flex-direction: column;
  width: 100vw;
  background-color: white;
}

.options1{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #f5f5f5;
}

.options2{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}