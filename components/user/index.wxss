/* components/user/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
}


.poster{
  width: 100%;
}

.content{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.head{
  position: relative;
  width:120rpx; 
  height:120rpx;
  margin-top: -60rpx;
  margin-left: 30rpx;
}

.head_image{
  width:120rpx; 
  height:120rpx;
  border: 2px solid #ffffff;
  border-radius:50%;
}

.head_gender{
  position: absolute;
  right: -8rpx;
  bottom: -8rpx;
  width: 30rpx; 
  height: 30rpx;
  border: 2px solid #ffffff;
  border-radius:50%;
  background-color: #e6f4ff;
}

.contact{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
}

.contact_message{
  width: 38rpx;
  height: 38rpx;
  background-color: #909296;
  margin-left: 10rpx;
  border-radius: 50%;
  border: 10rpx solid #909296;
}

.info{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20rpx;
  margin-top: 60rpx;
  border-bottom: 1px solid #f5f5f5;
}

.info_nickName{
  font-size: 30px;
  color: black;
}

.fo{
  display: flex;
  flex-direction: row;
}

.fo1{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.fo2{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.fo1_1{
  font-size: 25px;
}

.fo1_2{
  margin-left: 5rpx;
}

.fo2_1{
  font-size: 25px;
}

.fo2_2{
  margin-left: 5rpx;
}

.photosWall{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20rpx;
}

.photosWall_photos{
  margin-top: 20rpx;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 20rpx;
}